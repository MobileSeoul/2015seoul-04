<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="ho.Jun.ho.MainActivity"
     >

    
    <ho.Jun.ho.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/background_add_dialog"
        sl:scale_base_height="512"
        sl:scale_base_width="600" >

        <TextView
            android:id="@+id/add_dialog_error_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_dialog_error_title"
            android:textColor="#000"
            sl:scale_height="90"
            sl:scale_left="0"
            sl:scale_textsize="50"
            sl:scale_top="10"
            sl:scale_width="600" />

                <TextView
            android:id="@+id/add_dialog_error_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_dialog_error_detail"
            android:textColor="#000"
            sl:scale_height="90"
            sl:scale_left="0"
            sl:scale_textsize="37"
            sl:scale_top="200"
            sl:scale_width="600" />

        <Button
            android:id="@+id/add_dialog_error_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_dialog_ok_selector"
            sl:scale_height="88"
            sl:scale_left="180"
            sl:scale_top="385"
            sl:scale_width="239" />
    </ho.Jun.ho.ScalableLayout>

</RelativeLayout>