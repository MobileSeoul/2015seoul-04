<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="ho.Jun.ho.MainActivity"
     >

    
    <ho.Jun.ho.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/background_processing"
        sl:scale_base_height="198"
        sl:scale_base_width="600" >

        <TextView
            android:id="@+id/add_dialog_processing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_dialog_processing_title"
            android:textColor="#000"
            sl:scale_height="90"
            sl:scale_left="0"
            sl:scale_textsize="70"
            sl:scale_top="55"
            sl:scale_width="600" />
    </ho.Jun.ho.ScalableLayout>

</RelativeLayout>