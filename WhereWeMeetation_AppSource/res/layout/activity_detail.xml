<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center"
    tools:context="ho.Jun.ho.MainActivity" >

    <ho.Jun.ho.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_detail"
        sl:scale_base_height="1280"
        sl:scale_base_width="800" >

        <TextView
            android:id="@+id/detail_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/detail_title"
            android:textColor="#fff"
            sl:scale_height="130"
            sl:scale_left="0"
            sl:scale_textsize="64"
            sl:scale_top="5"
            sl:scale_width="800" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            sl:scale_height="880"
            sl:scale_left="50"
            sl:scale_top="340"
            sl:scale_width="700" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/detail_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>
            
        </LinearLayout>

        <Button
            android:id="@+id/detail_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_back_selector"
            sl:scale_height="47"
            sl:scale_left="50"
            sl:scale_top="40"
            sl:scale_width="66" />
    </ho.Jun.ho.ScalableLayout>

</RelativeLayout>