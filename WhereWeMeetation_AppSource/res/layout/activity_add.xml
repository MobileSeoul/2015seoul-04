<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:gravity="center"
    tools:context="ho.Jun.ho.MainActivity" >
    
    <ho.Jun.ho.ScalableLayout
        android:id="@+id/add_scalable_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_add"
        sl:scale_base_height="1280"
        sl:scale_base_width="800" >

        
        
        
       <TextView 
            android:id="@+id/add_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"
            sl:scale_width="800"
            sl:scale_height="130"
            sl:scale_left="0"
            sl:scale_top="5"  
            sl:scale_textsize="64"
            android:text="@string/add_title"
            />
        
         <TextView 
            android:id="@+id/add_text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            sl:scale_width="800"
            android:gravity="center"
            sl:scale_height="170"
            sl:scale_left="0"
            sl:scale_top="135"  
            sl:scale_textsize="44"
            android:text="@string/add_subtitle"
            />
        
        
         
         <ListView
             android:id="@+id/add_listview" 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:divider="@drawable/listview_divider"
             android:dividerHeight="10dp"
             sl:scale_width="700"
             sl:scale_height="585"
             sl:scale_left="50"
             sl:scale_top="440"
             />
         
         
         
         
         
         
         
         
         
         
         
         
        
        
         <Button
            android:id="@+id/add_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_add_selector"
            sl:scale_height="78"
            sl:scale_left="630"
            sl:scale_top="330"
            sl:scale_width="137" />
        
        
        
          <Button
            android:id="@+id/add_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_start_selector"
            sl:scale_height="127"
            sl:scale_left="130"
            sl:scale_top="1090"
            sl:scale_width="547" />
        
    </ho.Jun.ho.ScalableLayout>

</RelativeLayout>